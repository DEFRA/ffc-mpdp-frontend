{
  "name": "ffc-mpdp-frontend",
  "version": "1.0.18",
  "description": "Web frontend for MPDP workstream",
  "homepage": "https://github.com/DEFRA/ffc-mpdp-frontend",
  "main": "app/dist/main.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "pretest": "npm run test:lint",
    "test": "jest --runInBand",
    "test:watch": "jest --coverage=false --onlyChanged --watch --runInBand",
    "test:watch:all": "npm-run-all --parallel test:watch build:watch",
    "test:lint": "standard",
    "lint:fix": "standard --fix",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand --no-cache",
    "start:watch": "npm-run-all --parallel build:watch start:nodemon",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext css,js,njk --legacy-watch app/dist/main.js",
    "start:nodemon": "nodemon --inspect=0.0.0.0 --ext css,js,njk --legacy-watch app/dist/main.js",
    "pre-commit": "echo \"Running pre-commit hook\" && npm run lint:fix && docker-compose -f docker-compose.yaml -f docker-compose.test.yaml up --build"
  },
  "author": "Defra",
  "contributors": [],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@hapi/hapi": "20.2.2",
    "@hapi/inert": "6.0.5",
    "@hapi/vision": "7.0.0",
    "@hapi/wreck": "18.0.0",
    "applicationinsights": "2.5.1",
    "browserify-zlib": "0.2.0",
    "crypto-browserify": "^3.12.0",
    "elliptic": "^6.5.7",
    "govuk-frontend": "4.3.1",
    "hapi-pino": "11.0.1",
    "https-browserify": "1.0.0",
    "joi": "17.9.2",
    "json2csv": "6.0.0-alpha.2",
    "nunjucks": "3.2.4",
    "os-browserify": "0.3.0",
    "path-browserify": "1.0.1",
    "stream-browserify": "3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "babel-loader": "^9.1.3",
    "cheerio": "1.0.0-rc.12",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "6.6.0",
    "eslint-plugin-jest": "^28.8.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "jest": "29.0.0",
    "jest-junit": "13.2.0",
    "mini-css-extract-plugin": "2.5.3",
    "node-loader": "^2.0.0",
    "node-polyfill-webpack-plugin": "2.0.1",
    "nodemon": "2.0.19",
    "npm-run-all": "4.1.5",
    "pre-commit": "1.2.2",
    "resolve-url-loader": "5.0.0",
    "sass": "1.49.7",
    "sass-loader": "12.4.0",
    "standard": "^17.1.0",
    "webpack": "5.77.0",
    "webpack-cli": "4.10.0"
  },
  "overrides": {
    "semver": "7.5.3"
  },
  "standard": {
    "env": {
      "jest": true
    },
    "globals": [
      "$",
      "browser",
      "expect",
      "test",
      "jest",
      "describe",
      "beforeAll",
      "beforeEach",
      "afterAll",
      "afterEach"
    ],
    "ignore": [
      "app/dist/**/*.js",
      "webpack.config.js",
      "assets/js/*.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}

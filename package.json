{
  "name": "ffc-mpdp-frontend",
  "version": "0.1.1",
  "description": "Web frontend for MPDP workstream",
  "homepage": "https://github.com/DEFRA/ffc-mpdp-frontend",
  "main": "app/index.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "pretest": "npm run test:lint",
    "test": "jest --runInBand --forceExit",
    "test:watch": "jest --coverage=false --onlyChanged --watch --runInBand",
    "lint:fix": "standard --fix",
    "test:lint": "standard",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand --no-cache",
    "start:watch": "npm-run-all --parallel build:watch start:nodemon",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext css,js,njk --legacy-watch app/index.js",
    "start:nodemon": "nodemon --inspect=0.0.0.0 --ext css,js,njk --legacy-watch app/index.js"
  },
  "author": "Defra",
  "contributors": [],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@hapi/catbox-redis": "^6.0.2",
    "@hapi/cookie": "^11.0.2",
    "@hapi/crumb": "^8.0.1",
    "@hapi/hapi": "^20.2.2",
    "@hapi/inert": "^6.0.5",
    "@hapi/vision": "^6.1.0",
    "@hapi/yar": "^11.0.0",
    "applicationinsights": "^2.3.4",
    "ffc-messaging": "^2.3.4",
    "govuk-frontend": "4.0.1",
    "hapi-pino": "^9.1.2",
    "joi": "^17.6.0",
    "notifications-node-client": "^5.1.1",
    "nunjucks": "^3.2.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@hapi/catbox-memory": "^5.0.1",
    "@types/cheerio": "^0.22.31",
    "@types/hapi__hapi": "^20.0.10",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.19",
    "blipp": "^4.0.2",
    "cheerio": "^1.0.0-rc.10",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.0.6",
    "jest-junit": "^13.2.0",
    "mini-css-extract-plugin": "^2.5.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^7.5.1",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.54.9",
    "sass-loader": "^12.4.0",
    "standard": "^16.0.4",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "standard": {
    "env": {
      "jest": true
    },
    "globals": [
      "$",
      "browser"
    ],
    "ignore": [
      "app/frontend/dist/**/*.js",
      "test/acceptance/**/*.js",
      "test/acceptance/**/*.mjs",
      "test/acceptance/**/*.cjs"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}
